{
  "name": "why-pengo-github-io",
  "version": "1.0.0",
  "type": "module",
  "description": "Jon Morgan's portfolio website",
  "author": "Jon Morgan",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.{ts,js,html,css}\"",
    "lint": "prettier --check \"src/**/*.{ts,js,html,css}\" && eslint src --ext ts,js",
    "lint:fix": "prettier --write \"src/**/*.{ts,js,html,css}\" && eslint src --ext ts,js --fix",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.16.0",
    "globals": "^16.5.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  }
}
